{
    "manifest_version": 2,

    "name": "Banggood Good Search",
    "description": "Filter products for keyword and availability at Banggood.",

    "short_name": "GoodSearch",
    "version": "0.1",

    "author": "Fabio Mereu",
    "homepage_url": "https://github.com/medenagan/good-search",

    "permissions": [
        "storage",
        "tabs"
    ],

    "icons": {
        "128": "assets/icons/icon-128.png",
        "48": "assets/icons/icon-48.png",
        "32": "assets/icons/icon-32.png",
        "16": "assets/icons/icon-16.png"
    },

    "browser_action": {
        "default_popup": "pages/side.html",
        "default_icon": {
            "128": "assets/icons/icon-128.png",
            "48": "assets/icons/icon-48.png",
            "32": "assets/icons/icon-32.png",
            "16": "assets/icons/icon-16.png"
        }
    },

    "content_scripts": [{
        "matches": [
            "https://*.banggood.com/*",
            "https://*.banggood.in/*"
        ],
        "css": [
            "style/merchant.css"
        ],
        "js": [
            "lib/browser-polyfill.js",
            "lib/lz-string.js",
            "utils/persistent.js",
            "utils/filter.js",
            "content/banggood/api.js",
            "content/banggood/dom.js"
        ],
        "run_at": "document_end"
    }],

    "background": {
        "scripts": [
            "background/reload.js"
        ]
    }
}